<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius">

        <TextView
            android:id="@+id/f_item_date"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:background="@drawable/stroke_folio_item_top1_bottom1_left2_right1"
            android:gravity="center"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/f_item_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/stroke_folio_item_top1_bottom1_left0_right1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/f_item_debit"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/stroke_folio_item_top1_bottom1_left0_right1"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/f_item_credit"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/stroke_folio_item_top1_bottom1_left0_right2"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>