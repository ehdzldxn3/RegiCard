<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editCompany111"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="REGISTRATION CARD"
            android:textColor="@android:color/black"
            android:textSize="34sp"
            android:textStyle="bold" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="#FFFFFF"
        tools:ignore="DuplicateIds">

        <RelativeLayout
            android:id="@+id/rlayput"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textArrivalDate"
                    android:layout_width="135dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top2_bottom0_top2_left2_right1"
                    android:gravity="center"
                    android:text="Arrival Date"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editArrivalDate"
                        android:layout_width="165dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/stroke_top2_bottom0_left0_right1"
                        android:ems="10"
                        android:inputType="date"
                        android:paddingLeft="5dp"
                        tools:ignore="TouchTargetSizeCheck,DuplicateClickableBoundsCheck,SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/btnAD"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/stroke_top2_bottom0_left0_right1"
                        app:srcCompat="@drawable/ic_date_range_2x"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textDepartureDate"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top2_bottom0_left0_right1"
                    android:gravity="center"
                    android:text="Departure Date"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editDepartureDate"
                        android:layout_width="165dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/stroke_top2_bottom0_left0_right1"
                        android:ems="10"
                        android:inputType="none"
                        android:paddingLeft="5dp"
                        tools:ignore="TouchTargetSizeCheck,DuplicateClickableBoundsCheck,SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/btnDD"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/stroke_top2_bottom0_left0_right2"
                        app:srcCompat="@drawable/ic_date_range_2x"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textRoomNo"
                    android:layout_width="135dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left2_right1"
                    android:gravity="center"
                    android:text="Room No"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editRoomNo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/textNights"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right1"
                    android:gravity="center"
                    android:text="Nights"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editNights"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right2"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout3"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAdult"
                    android:layout_width="135dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left2_right1"
                    android:gravity="center"
                    android:text="Adult"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editAdult"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right1"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    tools:ignore="TouchTargetSizeCheck,DuplicateClickableBoundsCheck,SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/textChild"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right1"
                    android:gravity="center"
                    android:text="Child"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editChild"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right2"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    tools:ignore="TouchTargetSizeCheck,DuplicateClickableBoundsCheck,SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout4"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="135dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left2_right1"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/textTel"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right1"
                    android:gravity="center"
                    android:text="Tel"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right2"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTel1"
                        android:layout_width="53dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/stroke1"
                        android:ems="4"
                        android:gravity="center"
                        android:inputType="phone"
                        android:text="010" />

                    <EditText
                        android:id="@+id/editTel2"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/stroke1"
                        android:ems="4"
                        android:gravity="center"
                        android:hint="1234"
                        android:inputType="phone" />

                    <EditText
                        android:id="@+id/editTel3"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/stroke1"
                        android:ems="4"
                        android:gravity="center"
                        android:hint="5678"
                        android:inputType="phone" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout5"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAddr"
                    android:layout_width="135dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left2_right1"
                    android:gravity="center"
                    android:text="Address"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editAddr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/textCarNo"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right1"
                    android:gravity="center"
                    android:text="Car No"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editCarNo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right2"
                    android:ems="10"
                    android:hint=" 000가1234"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    tools:ignore="DuplicateIds,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout6"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textCompanynm"
                    android:layout_width="135dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left2_right1"
                    android:gravity="center"
                    android:text="Company"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/textNationality"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right1"
                    android:gravity="center"
                    android:text="Nationality"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom0_left0_right2"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerNationality"
                        android:layout_width="213dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout7"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPassportNo"
                    android:layout_width="135dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom2_left2_right1"
                    android:gravity="center"
                    android:text="Passport No"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editPassportNo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom2_left0_right1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/textPurposeofVisit"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom2_left0_right1"
                    android:gravity="center"
                    android:text="Purpose of Visit"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top1_bottom2_left0_right2"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkSeminar"
                        android:layout_width="106.5dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:buttonTint="#000000"
                        android:text="Seminar"
                        tools:ignore="TouchTargetSizeCheck" />

                    <CheckBox
                        android:id="@+id/checkInvitation"
                        android:layout_width="106.5dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:buttonTint="#000000"
                        android:text="Invitation"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout8"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textRemark"
                    android:layout_width="148dp"
                    android:layout_height="50dp"
                    android:background="@drawable/stroke_top2_bottom2_left2_right1"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Remark"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editRemark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_top2_bottom2_left0_right2"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    tools:ignore="DuplicateIds,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/layout9"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/stroke">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="The hotel collects personal information as follows to provide services. \nMatters concerning the collection and use of essential personal information \nItems used for collection : name, address, phone number, nationality \nPurpose of collection and use: identification of identity, provision of services and information, lost items, civil complaint handling, etc. \nRetention period: 3 years from the date of consent to collection and use (check-in) \nYou may refuse to agree to the above, but in this case,  accommodation and service provision may be restricted."
                    android:textSize="20sp" />
            </ScrollView>

            <LinearLayout
                android:id="@+id/layout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scrollView"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textConsent"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Do you agree to the collection and use of personal information?    "
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkConsent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:buttonTint="#000000"
                    android:text="Consent"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout10"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center"
                    android:paddingBottom="5dp"
                    android:text="Signature"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.github.gcacace.signaturepad.views.SignaturePad
                    android:id="@+id/sign"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="save" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout11"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textBottom1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textBottom2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>