<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F5F5F5"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="REGISTRATION CARD"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/layout62"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textRemark"
                android:layout_width="513dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left2_right1"
                android:gravity="center"
                android:text="Remark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editRemark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right2"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/textArrivalDate"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_top2_bottom0_top2_left2_right1"
                android:gravity="center"
                android:text="Arrival Date"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editArrivalDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top2_bottom0_left0_right1"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textDepartureDate"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top2_bottom0_left0_right1"
                android:gravity="center"
                android:text="Departure Date"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editDepartureDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top2_bottom0_left0_right2"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textRoomNo"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left2_right1"
                android:gravity="center"
                android:text="Room No"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editRoomNo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right1"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textNights"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right1"
                android:gravity="center"
                android:text="Nights"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editNights"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right2"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAdult"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left2_right1"
                android:gravity="center"
                android:text="Adult"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editAdult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right1"
                android:ems="10"
                android:inputType="number"
                android:paddingLeft="5dp"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textChild"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right1"
                android:gravity="center"
                android:text="Child"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editChild"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right2"
                android:ems="10"
                android:inputType="number"
                android:paddingLeft="5dp"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textName"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left2_right1"
                android:gravity="center"
                android:text="Name"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right1"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textTel"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right1"
                android:gravity="center"
                android:text="Tel"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right2"
                android:ems="10"
                android:hint=" -는 뺴고 입력하세요"
                android:inputType="phone"
                android:paddingLeft="5dp"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAddr"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left2_right1"
                android:gravity="center"
                android:text="Address"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editAddr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right1"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textCarNo"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right1"
                android:gravity="center"
                android:text="Car No"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editCarNo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right2"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textCompanynm"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left2_right1"
                android:gravity="center"
                android:text="Company"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editCompany"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right1"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textNationality"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right1"
                android:gravity="center"
                android:text="Nationality"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editNationality"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right2"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPassportNo"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left2_right1"
                android:gravity="center"
                android:text="Passport No"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editPassportNo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right1"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textPurposeofVisit"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right1"
                android:gravity="center"
                android:text="Purpose of Visit"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editPurposeofVisit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/stroke_top1_bottom0_left0_right2"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout62"
            android:layout_marginBottom="20dp"
            android:background="@drawable/stroke">

            <ScrollView
                android:id="@+id/scrolview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="호텔은 서비스를 제공 하기 위해 아래와 같이 본인의 개인정보를 수집 하고 있습니다. 필수적인 개인정보의 수집 이용에 관한 사항
                                 \n(1) 수집 이용 항목 : 성명, 생년월일,주소,전화번호,국적, 이메일
                                \n(2) 수집 이용 목적 : 본인식별, 서비스 및 정보 제공, 분실물, 민원 처리 등
                                \n(3) 보유 이용 기간 : 수집 이용 동의일로 부터(체크인) 3년간
                                \n ※ 위 사항에 대한 동의를 거부하실 수 있으며, 다만 이 경우 투숙 및 서비스 제공이 제한 될 수 있습니다. " />
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout8"
            android:gravity="bottom">

            <TextView
                android:id="@+id/textConsent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:text="Do you agree to use your personal information?"
                android:textSize="20sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkConsent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="false"
                android:layout_alignParentBottom="false"
                android:layout_marginBottom="70dp"
                android:layout_toEndOf="@+id/layoutR"
                android:buttonTint="#000000"
                android:paddingRight="30dp"
                android:text="Consent"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:paddingBottom="5dp"
                android:text="Signature"
                android:textStyle="bold" />

            <com.github.gcacace.signaturepad.views.SignaturePad
                android:id="@+id/sign"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/bottom_stroke" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="save" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout9"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="상호. (재)출판도시문화재단 / 사업자등록번호. 128-82-08500 / Add. 경기도 파주시 회룡길 145 아시아 출판문화도시쎈터 라이브러리 스테이 지지향 / Tel. 031)-9550-0090 / www.jijihyang.com"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>