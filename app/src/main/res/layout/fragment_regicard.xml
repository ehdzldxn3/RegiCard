<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/hotelname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:enabled="false"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="22dp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:text="ROOM NO : " />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:id="@+id/roomno"
                android:textStyle="bold"
                android:textSize="22dp"
                android:enabled="false"
                android:textColor="@android:color/black"
                android:background="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Guest Name"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/guestname"
                android:enabled="false"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Company"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/company"
                android:textSize="20dp"
                android:enabled="false"
                android:gravity="center"

                android:textColor="@android:color/black"
                android:background="@drawable/border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Nationality"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/nationality"
                android:textSize="20dp"
                android:enabled="false"
                android:gravity="center"

                android:textColor="@android:color/black"
                android:background="@drawable/border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Phone"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/telno"
                android:textSize="20dp"
                android:enabled="false"
                android:gravity="center"

                android:textColor="@android:color/black"
                android:background="@drawable/border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Passport No"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/passport"
                android:textSize="20dp"
                android:enabled="false"
                android:gravity="center"

                android:textColor="@android:color/black"
                android:background="@drawable/border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Address"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/address"
                android:textSize="20dp"
                android:enabled="false"
                android:gravity="center"

                android:textColor="@android:color/black"
                android:background="@drawable/border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Check In"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/check_in"
                android:textSize="20dp"
                android:enabled="false"
                android:gravity="center"

                android:textColor="@android:color/black"
                android:background="@drawable/border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Check Out"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/check_out"
                android:textSize="20dp"
                android:enabled="false"
                android:gravity="center"

                android:textColor="@android:color/black"
                android:background="@drawable/border" />
        </LinearLayout>

    </LinearLayout>

    <!-- 하단 comment & Sign 부분    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="false"
                android:textColor="@android:color/black"
                android:textSize="21dp"
                android:text="호텔은 서비스를 제공 하기 위해 아래와 같이 본인의 개인정보를 \n수집 하고 있습니다.
                                \n필수적인 개인정보의 수집 이용에 관한 사항
                                 \n(1) 수집 이용 항목 : 성명, 생년월일,주소,전화번호,국적, 이메일
                                \n(2) 수집 이용 목적 : 본인식별, 서비스 및 정보 제공, 분실물,\n      민원 처리 등
                                \n(3) 보유 이용 기간 : 수집 이용 동의일로 부터(체크인) 3년간
                                \n※ 위 사항에 대한 동의를 거부하실 수 있으며,
                                \n    다만 이 경우 투숙 및 서비스 제공이 제한 될 수 있습니다. " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:layout_gravity = "left"
                android:singleLine="false"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="22dp"
                android:text="개인정보의 제공 및 활용에 동의 하십니까 ? " />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_marginLeft="50dp"
                android:text="동의함"
                android:id="@+id/check1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity = "center"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:text="Signature" />


                <com.github.gcacace.signaturepad.views.SignaturePad
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textSize="30dp"
                    android:id="@+id/signPad" />

                <Button
                    android:id="@+id/save_bt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_marginLeft="30dp"
                    android:background="#7e9cc5"
                    android:text="SAVE" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

